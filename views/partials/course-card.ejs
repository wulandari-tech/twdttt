<div class="card h-100 course-card-public shadow-sm">
    <a href="/courses/<%= course._id %>" class="text-decoration-none text-dark">
        <% if (course.coverImage && course.coverImage.url) { %>
            <img src="<%= course.coverImage.url %>" class="card-img-top course-card-public-img" alt="<%= course.title %>">
        <% } else { %>
            <img src="/images/default-course-cover.png" class="card-img-top course-card-public-img" alt="Sampul Kursus Default">
        <% } %>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title course-title-public"><%= course.title %></h5>
            <% if (course.category) { %>
                <p class="card-text text-muted small mb-1"><%= course.category %></p>
            <% } %>
            <p class="card-text course-description-public small">
                <%= course.shortDescription ? course.shortDescription : (course.description.substring(0, 80) + (course.description.length > 80 ? '...' : '')) %>
            </p>
            <div class="mt-auto">
                <% if (course.instructor) { %>
                    <p class="card-text small mb-2">
                        <i class="fas fa-user-tie text-muted"></i> <%= course.instructor %>
                    </p>
                <% } %>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="course-price-public fw-bold <%= course.price > 0 ? 'text-primary' : 'text-success' %>">
                        <%= course.price > 0 ? 'Rp ' + course.price.toLocaleString('id-ID') : 'Gratis' %>
                    </span>
                    <span class="small text-muted"><i class="fas fa-book-reader"></i> <%= course.lessons ? course.lessons.length : 0 %> Pel.</span>
                </div>
            </div>
        </div>
    </a>
    <div class="card-footer bg-transparent border-top-0 text-center pb-3">
         <a href="/courses/<%= course._id %>" class="btn btn-sm btn-outline-primary w-100">Lihat Detail</a>
    </div>
</div>