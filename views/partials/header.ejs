<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' | WFC Course' : 'WFC Course Platform' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof pageStyles !== 'undefined' && pageStyles.length > 0) { %>
        <% pageStyles.forEach(style => { %>
            <link rel="stylesheet" href="/css/<%= style %>.css">
        <% }); %>
    <% } %>
    <% if (typeof bodyClass !== 'undefined' && bodyClass.includes('lesson-view-active-public')) { %>
    <link rel="stylesheet" href="/css/lesson-view.css">
<% } %>
</head>
<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : '' %>">
    <%- include('navbar', { currentPath: typeof currentPath !== 'undefined' ? currentPath : '' }) %>
    <div class="site-content">
        <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs.length > 0) { %>
            <%- include('breadcrumbs', { breadcrumbs: breadcrumbs }) %>
        <% } %>
        <main class="main-container" id="mainContainer">