<div class="card h-100 course-card-public shadow-sm border-0 overflow-hidden">
    <a href="/courses/<%= course._id %>" class="text-decoration-none text-dark d-flex flex-column h-100">
        <div class="course-card-img-wrapper-public">
            <% if (course.coverImage && course.coverImage.url) { %>
                <img src="<%= course.coverImage.url %>" class="card-img-top course-card-public-img" alt="<%= course.title %>">
            <% } else { %>
                <img src="/images/default-course-cover.png" class="card-img-top course-card-public-img" alt="Sampul Kursus Default">
            <% } %>
        </div>
        <div class="card-body d-flex flex-column p-3">
            <h5 class="card-title course-title-public mb-1 fs-6 fw-bold">
                <%= course.title %>
            </h5>
            <% if (course.category) { %>
                <p class="card-text text-muted small mb-2"><%= course.category %></p>
            <% } %>
            <p class="card-text course-description-public small text-muted mb-2 flex-grow-1">
                <%= course.shortDescription ? course.shortDescription : (course.description ? course.description.substring(0, 70) + (course.description.length > 70 ? '...' : '') : 'Tidak ada deskripsi singkat.') %>
            </p>
            <div class="mt-auto">
                <% if (course.instructor) { %>
                    <p class="card-text small mb-2 d-flex align-items-center">
                        <i class="fas fa-user-tie text-muted me-2"></i> <%= course.instructor %>
                    </p>
                <% } %>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="course-price-public fs-5 fw-bold <%= course.price > 0 ? 'text-primary' : 'text-success' %>">
                        <%= course.price > 0 ? 'Rp ' + course.price.toLocaleString('id-ID') : 'Gratis' %>
                    </span>
                    <span class="small text-muted d-flex align-items-center">
                        <i class="fas fa-book-reader me-1"></i> <%= course.lessons ? course.lessons.length : 0 %> Pelajaran
                    </span>
                </div>
            </div>
        </div>
    </a>
    <div class="card-footer bg-white border-top-0 text-center pt-0 pb-3">
         <a href="/courses/<%= course._id %>" class="btn btn-sm btn-primary w-100">Lihat Detail Kursus</a>
    </div>
</div>